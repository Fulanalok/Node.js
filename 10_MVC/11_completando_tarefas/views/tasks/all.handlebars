<h1>Todas as Tasks:</h1>
<ul class="task-list">
  {{#if emptyTasks}}
    <p>Não há tarefas cadastradas</p>
  {{/if}}
  {{#each tasks}}
    <li>
      {{#if this.done}}
        <a href="/" class="title done">{{this.title}}</a>
      {{else}}
        <a href="/" class="title">{{this.title}}</a>
      {{/if}}
      <span class="actions">
        <form action="/tasks/updatestatus" method="POST">
          <input type="hidden" name="id" value={{this.id}} />
          <input type="hidden" name="done" value={{this.done}} />
          <button type="submit">
            <i class="bi bi-check2"></i>
          </button>
        </form>
        <form action="/tasks/remove" method="POST">
          <input type="hidden" name="id" value={{this.id}} />
          <button type="submit">
            <i class="bi bi-x-lg"></i>
          </button>
        </form>
      </span>
    </li>
  {{/each}}
</ul>